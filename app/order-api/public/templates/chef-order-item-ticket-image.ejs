<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini Label</title>
    <% var dir=process.cwd() %>
    <style>
      @page {
        size: 5cm 3cm;
        margin: 0;
      }
      html, body {
        margin: 3px;
        padding: 0;
        background: white;
      }
      body {
        width: 5cm;
        height: 3cm;
        font-family: monospace, sans-serif;
        font-size: 10px;
        margin: 0;
        padding: 1px;
        line-height: 1.3;
      }
      .line {
        margin-bottom: 4px;
        word-wrap: break-word;
      }
      .text-note {
        font-size: 8px;
      }
    </style>
    <style>
      <%- include(dir + '/public/css/tailwind.min.css') %>
    </style>
  </head>
  <body>
    <div class="p-1">
      <div class="flex justify-between items-start mb-1">
        <div class="text-sm font-bold">
          <span class="">Mã:</span> <span><%= referenceNumber %></span>
        </div>
      </div>
      <div class="text-sm font-bold"><span class="">Sp:</span> <span class="font-bold"><%= productName %></span></div>
      <div class="text-sm font-bold"><span class=""></span>Ghi chú:</span> <span><%= note || 'Không có' %></span></div>
    </div>
  </body>
</html>
